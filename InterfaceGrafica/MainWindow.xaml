<Window x:Class="InterfaceGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceGrafica"
        mc:Ignorable="d"
        
        Title="Pato Lucas vs Bugs Bunny" Height="450" Width="800">
    <!--Esto es un contenedor-->
    <StackPanel>
        <!--Texto Plano-->
        <TextBlock Margin ="246,50,0,2" FontFamily="arial" FontSize="16" HorizontalAlignment="Left" FontStyle="Italic" Width="57">Correo:</TextBlock>
        <!--Caja para introducir texto-->
        <TextBox Margin ="10" Width="300" HorizontalAlignment="Center"></TextBox>
        <TextBlock Margin ="246,10,0,2" FontFamily="arial" FontSize="16" HorizontalAlignment="Left" FontStyle="Italic" Width="91">Contraseña:</TextBlock>
        <TextBox  Margin ="10" Width="300" HorizontalAlignment="Center"></TextBox>
        <Button  Width="200" Margin ="15,10,10,0" FontSize="18" FontFamily="ComicsSans" HorizontalAlignment="Center">Iniciar sesion</Button>

    </StackPanel>
</Window>
